<a class="item">
  <%= link_to "Chatroom", root_path, class: "item"%>
</a>
<a class="item">
  Messages
</a>
<div class="right menu">
    <% if logged_in? %>
      <a class="item">
        <%= current_user.username%>
      </a>
    <% end %>
  <div class="ui dropdown item">
    Account <i class="dropdown icon"></i>
    <div class="menu">
      <% if logged_in? %>
        <a><%= link_to "Logout", logout_path, class: "item", data: {turbo_method: :delete} %></a>
      <% else %>
        <a><%= link_to "Log in", login_path, class: "item"%></a>
        <a class="item">Sign up</a>
      <% end %>
    </div>
  </div>
  <% if !logged_in? %>
    <div class="item">
      <%= link_to "Log in", login_path, class: "ui primary button"%>
    </div>
  <% else %>
      <div class="item">
        <%= link_to "Logout", logout_path, class: "negative ui button", data: {turbo_method: :delete} %>
      </div>
  <% end %>
</div>
